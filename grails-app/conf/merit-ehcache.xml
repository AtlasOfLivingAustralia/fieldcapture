<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107'>

    <persistence directory="/data/fieldcapture/ehcache"/>

    <cache alias="homePageImages">
        <expiry>
            <ttl unit="seconds">600</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1</heap>
        </resources>
    </cache>

    <cache alias="homePageBlog">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1</heap>
        </resources>
    </cache>

    <cache alias="homePageDocuments">
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1</heap>
        </resources>
    </cache>

    <cache alias="homePageStatistics">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.String</value-type>
        <resources>
            <heap unit="entries">10</heap>
            <disk unit="MB" persistent="true">2</disk>
        </resources>
    </cache>

    <cache alias="userProfileCache">
        <resources>
            <heap unit="entries">200</heap>
        </resources>
    </cache>

    <cache alias="userDetailsCache">
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
        </resources>
    </cache>

    <cache alias="speciesFieldConfig">
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
        </resources>
    </cache>

    <cache alias="programList">
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1</heap>
        </resources>
    </cache>

</config>